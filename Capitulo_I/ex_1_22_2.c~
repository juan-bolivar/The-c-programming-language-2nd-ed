#include <stdio.h>


#define n_cols 6
#define MAXLINE 10000



int getline(char line[] );

main(){
  
  int  len , i, c , sup;
  char line[MAXLINE];
  int  line_n = 0;
  int  inf = 0;
  
  while (( len = getline(line)) != -1){
    inf = 0;
    while( inf + n_cols <= len){

      printf("%d" , len);
      sup = inf + n_cols;
      
      while(line[sup-2]==' ' && (sup-2) > 0){
	  sup = sup - 1;
	}

      if((sup-1) <= 0) {
	  sup = n_cols;
	}

	/*printf("Superior es %d " , sup);*/
      for(i = inf ; i < sup   ; i++) {

	/*putchar(line[i]);*/
	/*printf("%d" , i);*/
	putchar(line[i]);
	
      }
      putchar('\n');
      inf = inf + sup + 1;

      /*printf("si llego %d " ,inf);*/
    }
  
    if( inf <= len) {
      if( inf + n_cols >= len ){
	for(i = inf-1; i <= inf + n_cols ; i++) {
	  if(line[i] != '\0'){
	    /*printf("?");*/
	    putchar(line[i]);
	  }
	}
	/*putchar('\0');*/
      }
    }
  }
  return 0;
} 


int getline(char s[]){

  int c,i;
  i = 0;

  while ((c=getchar())!=EOF && c!='\n'){
      s[i] = c;
      ++i;
    }

  s[i] =  c;
  s[i+1] = '\0';

   if(c == EOF){

    return -1;
    
   }else{


  return i;
   }
}



